@model IEnumerable<DataLayer.Page>
    @{
        ViewBag.Title = "shownewsbyid";
    }



    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">خانه </a></li>
        <li class="breadcrumb-item"><a href="#">اخبار </a></li>
        <li class="breadcrumb-item active">@ViewBag.title </li>
    </ul>

    <!-- last news -->
    <section class="last-news-section border-radius">

        <header><i class="icons icon-doc-2"></i>  <h3> آرشیو اخبار @ViewBag.title</h3> </header>
        <ul>
            @foreach (var item in Model)
            {

                <li>
                    <img class="border-radius" src="/pageimge/@item.Imagename">
                    <h2> <a href="/news/@item.PageID"> @item.Title </a></h2>
                    <p>
@item.ShortDiscription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreatDate.toshamsi() </span>
                    <a href="" class="more-link"><i class="icons icon-more"></i></a>
                </li>
            }
        </ul>

    </section>
    <!-- End last news -->

    <ul class="pagination">
        <li><a href="#">1</a></li>
        <li class="active"><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
    </ul>


